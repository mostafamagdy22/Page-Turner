@model PageTurner.Models.Author

<div class="container mt-5">
    <!-- Author Profile -->
    <div class="row">
        <div class="col-md-4 text-center">
            <img src="@(Model.Image != null ? Model.Image : Model.Gender == PageTurner.Enums.Gender.Male ?  "/images/Authors/defaultMale.jpg" : "/images/Authors/defaultFemale")" class="img-fluid rounded-circle" alt="Author Image" width="200">
            <h2 class="mt-3">@Model.Name</h2>
            <p class="text-muted">Writer | Novelist | Blogger</p>
        </div>
        <div class="col-md-8">
            <h4>About the Author</h4>
            <p>@Model.Descreption</p>
            <p>Follow him on social media:</p>
            <a href="#" class="btn btn-primary btn-sm">Twitter</a>
            <a href="#" class="btn btn-secondary btn-sm">LinkedIn</a>
            <a href="#" class="btn btn-dark btn-sm">Website</a>
        </div>
    </div>

    <!-- Books Section -->
    <h4 class="mt-5">Books & Articles</h4>
    <div class="row">
        <p>Books Count: @Model.BookAuthors.Count()</p>
        @foreach (var book in Model.BookAuthors.Select(ba => ba.Book))
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="@(string.IsNullOrEmpty(book.Image) ? "/images/Books/default.jpg" : book.Image)"
                         class="card-img-top" alt="Book Image">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">
                          @(book.Descreption.Length > 100 ? book.Descreption.Substring(0, 100) + "..." : book.Descreption)
                         </p>
                        <a asp-controller="Books" asp-action="Details" asp-route-id="@book.ID" class="btn btn-primary w-100">Read More</a>
                    </div>
                </div>
            </div>
        }
    </div>


    <!-- Contact Form -->
    <h4 class="mt-5">Contact the Author</h4>
    <form>
        <div class="mb-3">
            <label for="name" class="form-label">Your Name</label>
            <input type="text" class="form-control" id="name" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Your Email</label>
            <input type="email" class="form-control" id="email" required>
        </div>
        <div class="mb-3">
            <label for="message" class="form-label">Message</label>
            <textarea class="form-control" id="message" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-success">Send Message</button>
    </form>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>