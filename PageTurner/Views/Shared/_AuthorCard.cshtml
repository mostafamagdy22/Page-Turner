@model Author

@* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> *@

@{
    var defaultImage = Model.Gender == PageTurner.Enums.Gender.Male
        ? "/images/Authors/defaultMale.jpg"
        : "/images/Authors/defaultFemale.jpg";
}

<div class="col-md-4">
    <div class="card shadow-sm">
        <a asp-action="Details" asp-controller="Authors" asp-route-id="@Model.ID">
            <img src="@Model.Image"
            class="card-img-top" 
            alt="Author Name"
            onerror="this.src='@defaultImage';">
        </a>
        <div class="card-body text-center">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Descreption?.Substring(0, Math.Min(100, Model.Descreption.Length))</p>
            <a asp-action="Details" asp-controller="Authors" asp-route-id="@Model.ID" class="btn btn-primary">View Profile</a>
            @if(User.IsInRole("Admin"))
            {
                <a asp-controller="Authors" asp-action="Update" asp-route-id="@Model.ID" class="btn btn-success">Edit</a>
                <a asp-controller="Authors" asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger">Delete</a>
            }
        </div>
    </div>
</div>
