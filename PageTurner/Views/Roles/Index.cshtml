@using PageTurner.Models.ViewModels
@model IEnumerable<RoleViewModel>

<div class="container mt-4">
    <h2 class="mb-4">Roles</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Role Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.RoleName</td>
                    <td>
                        <a asp-controller="Roles" asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-controller="Roles" asp-route-name="@role.RoleName" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Roles" asp-action="New" class="btn btn-primary mt-3">Add New Role</a>
</div>